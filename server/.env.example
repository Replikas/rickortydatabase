# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# PostgreSQL Database Configuration
# For Railway PostgreSQL, these will be automatically provided:
DATABASE_URL=postgresql://username:password@hostname:port/database
# Or individual components:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rickandmorty_db
DB_USER=your_username
DB_PASSWORD=your_password
DB_SSL=false

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=86400000

# File Upload Configuration
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=5
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,audio/mpeg,audio/wav

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Body Parser Limits
MAX_JSON_SIZE=10mb
MAX_URL_ENCODED_SIZE=10mb

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@rickandmortydatabase.com

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# External API Keys (Optional)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Content Moderation (Optional)
CONTENT_MODERATION_ENABLED=false
PROFANITY_FILTER_ENABLED=true

# Development Settings
DEBUG_MODE=false
LOG_LEVEL=info
ENABLE_CORS_DEBUG=false

# Security Settings
TRUST_PROXY=true
SECURE_COOKIES=false

# Railway Specific (These are automatically set by Railway)
# RAILWAY_STATIC_URL=
# RAILWAY_GIT_COMMIT_SHA=
# RAILWAY_GIT_BRANCH=
# RAILWAY_ENVIRONMENT=