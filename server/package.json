{
  "name": "rickorty-server",
  "version": "1.0.0",
  "description": "Backend server for Rickorty fanworks database",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "seed": "node scripts/seed.js",
    "clean": "node scripts/clean.js",
    "setup-admin": "node setup-admin.js",
    "postinstall": "npm install --os=linux --cpu=x64 sharp && node setup-admin.js || echo 'Admin setup will run after first user registration'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "sharp": "^0.33.1",
    "aws-sdk": "^2.1506.0",
    "uuid": "^9.0.1",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "validator": "^13.11.0",
    "nodemailer": "^6.9.4",
    "mime-types": "^2.1.35",
    "file-type": "^18.5.0",
    "pdf-parse": "^1.1.1",
    "marked": "^5.1.2",
    "dompurify": "^3.0.5",
    "jsdom": "^22.1.0",
    "axios": "^1.5.0",
    "node-cron": "^3.0.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.48.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "mongodb-memory-server": "^8.15.1"
  },
  "keywords": ["express", "mongodb", "fanworks", "api", "rick-and-morty"],
  "author": "Rickorty Database Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": ["<rootDir>/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/coverage/**",
      "!server.js"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "camelcase": "off"
    }
  }
}